{
  "name": "lex-business-website",
  "version": "1.0.19",
  "description": "Flexible business website with e-commerce and service showcase capabilities",
  "main": "src/index.js",
  "scripts": {
    "dev": "npx concurrently \"npm run dev:backend\" \"npm run dev:frontend\" --names \"BACKEND,FRONTEND\" --prefix-colors \"yellow,cyan\"",
    "dev:frontend": "vite",
    "dev:backend": "cd backend-loopback4 && node start-server.js",
    "dev:old": "vite",
    "dev:host": "vite --host",
    "dev:network": "vite --host 0.0.0.0",
    "start:network": "./scripts/start-network.sh",
    "start": "cd backend-loopback4 && node start-server.js",
    "email:worker": "node backend-loopback4/src/workers/email-worker.js",
    "worker:all": "npx concurrently \"npm run start\" \"npm run email:worker\" --names \"SERVER,EMAIL\" --prefix-colors \"green,blue\"",
    "test:setup": "node backend-loopback4/src/test/setup-test-data.js",
    "test:email": "node backend-loopback4/src/test/test-email.js",
    "test:sessions": "node backend-loopback4/src/test/test-session-management.js",
    "test:notifications": "node backend-loopback4/src/test/test-email-notifications.js",
    "test:cancellation": "node backend-loopback4/src/test/test-cancellation-workflow.js",
    "test:all": "node backend-loopback4/src/test/run-all-tests.js",
    "version:bump": "node scripts/bump-version.js",
    "version:inject": "node scripts/inject-version.js",
    "prebuild": "npm run version:inject",
    "build": "npm run version:bump && npm run version:inject && vite build",
    "build:prod": "npm run version:bump && npm run version:inject && vite build --config vite.config.prod.ts --mode production",
    "build:no-bump": "vite build",
    "preview": "vite preview",
    "showcase": "http-server showcase -p 8080",
    "lint": "eslint src/**/*.{js,jsx,ts,tsx}",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest --coverage",
    "test:coverage:report": "vitest run --coverage && open coverage/index.html",
    "test:e2e": "cypress open",
    "test:e2e:headless": "cypress run",
    "generate:sitemap": "tsx scripts/generate-sitemap.ts",
    "build:full": "npm run generate:sitemap && npm run build:prod",
    "start:prod": "node server.js",
    "migrate:prod": "cd backend && npm run migrate:prod",
    "worker:prod": "cd backend && npm run worker:prod",
    "heroku-prebuild": "echo Disabling Heroku cache && rm -rf node_modules && npm cache clean --force",
    "heroku-postbuild": "npm run build:simple && cd backend-loopback4 && npm run heroku-postbuild",
    "build:simple": "npm run version:bump && npm run version:inject && vite build --config vite.config.simple.ts --mode production",
    "start:backend": "cd backend-loopback4 && npm start",
    "build:backend": "cd backend-loopback4 && npm run build"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.6",
    "@heroicons/react": "^2.1.1",
    "@hookform/resolvers": "^5.2.0",
    "@sentry/react": "^7.100.0",
    "@sentry/tracing": "^7.100.0",
    "@stripe/react-stripe-js": "^3.8.0",
    "@stripe/stripe-js": "^3.0.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/react-query": "^5.25.0",
    "@types/react-datepicker": "^6.2.0",
    "canvas-confetti": "^1.9.3",
    "clsx": "^2.1.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "date-fns": "^3.3.1",
    "express": "^4.21.2",
    "framer-motion": "^11.0.3",
    "handlebars": "^4.7.8",
    "isomorphic-dompurify": "^2.26.0",
    "lucide-react": "^0.356.0",
    "moment": "^2.30.1",
    "nodemailer": "^7.0.5",
    "react": "^18.3.1",
    "react-big-calendar": "^1.19.4",
    "react-datepicker": "^8.4.0",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.50.0",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^6.22.0",
    "recharts": "^3.1.0",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^2.2.1",
    "uuid": "^9.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.6.1",
    "autoprefixer": "^10.4.17",
    "axe-core": "^4.8.3",
    "axios": "^1.11.0",
    "concurrently": "^9.2.0",
    "cypress": "^13.6.3",
    "cypress-axe": "^1.5.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "http-server": "^14.1.1",
    "jsdom": "^26.1.0",
    "msw": "^2.10.4",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "puppeteer": "^24.15.0",
    "sass": "^1.70.0",
    "tailwindcss": "^3.4.1",
    "terser": "^5.43.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.1",
    "vitest": "^1.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
