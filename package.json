{
  "name": "lex-business-website",
  "version": "1.0.0",
  "description": "Flexible business website with e-commerce and service showcase capabilities",
  "main": "src/index.js",
  "scripts": {
    "dev": "vite",
    "dev:host": "vite --host",
    "dev:network": "vite --host 0.0.0.0",
    "start:network": "./scripts/start-network.sh",
    "start": "node server.js",
    "build": "vite build",
    "preview": "vite preview",
    "showcase": "http-server showcase -p 8080",
    "lint": "eslint src/**/*.{js,jsx,ts,tsx}",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest --coverage",
    "test:coverage:report": "vitest run --coverage && open coverage/index.html",
    "test:e2e": "cypress open",
    "test:e2e:headless": "cypress run",
    "generate:sitemap": "tsx scripts/generate-sitemap.ts",
    "build:full": "npm run generate:sitemap && npm run build",
    "start:prod": "node server.js",
    "migrate:prod": "cd backend && npm run migrate:prod",
    "worker:prod": "cd backend && npm run worker:prod",
    "heroku-prebuild": "echo This is the heroku prebuild step",
    "heroku-postbuild": "npm run build",
    "start:backend": "cd backend && npm start",
    "build:backend": "cd backend && npm run build"
  },
  "dependencies": {
    "@heroicons/react": "^2.1.1",
    "@hookform/resolvers": "^5.2.0",
    "@sentry/react": "^7.100.0",
    "@sentry/tracing": "^7.100.0",
    "@stripe/stripe-js": "^3.0.0",
    "@tanstack/react-query": "^5.25.0",
    "axios": "^1.6.7",
    "clsx": "^2.1.0",
    "date-fns": "^3.3.1",
    "framer-motion": "^11.0.3",
    "lucide-react": "^0.356.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.50.0",
    "react-router-dom": "^6.22.0",
    "tailwind-merge": "^2.2.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.6.1",
    "autoprefixer": "^10.4.17",
    "axe-core": "^4.8.3",
    "cypress": "^13.6.3",
    "cypress-axe": "^1.5.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "http-server": "^14.1.1",
    "jsdom": "^26.1.0",
    "msw": "^2.10.4",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "puppeteer": "^24.15.0",
    "sass": "^1.70.0",
    "tailwindcss": "^3.4.1",
    "terser": "^5.43.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.1",
    "vitest": "^1.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
