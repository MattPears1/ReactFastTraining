# Application
NODE_ENV=production
PORT=5000

# Frontend URL
FRONTEND_URL=https://yourdomain.com

# Database
DATABASE_URL=postgres://user:password@host:5432/database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lex_business
DB_USER=postgres
DB_PASSWORD=your_password

# Redis
REDIS_URL=redis://user:password@host:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@lexbusiness.com

# SendGrid (Alternative to SMTP)
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxx

# AWS S3 (File Storage)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=your-bucket-name
AWS_REGION=us-east-1

# Cloudinary (Alternative Image Storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Stripe (Payment Processing)
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# PayPal (Alternative Payment)
PAYPAL_CLIENT_ID=your-client-id
PAYPAL_CLIENT_SECRET=your-client-secret
PAYPAL_MODE=live

# Twilio (SMS/Voice)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Google OAuth
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# Sentry (Error Tracking)
SENTRY_DSN=https://xxxxxx@sentry.io/xxxxx

# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Elasticsearch (Search)
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-password

# Algolia (Alternative Search)
ALGOLIA_APP_ID=your-app-id
ALGOLIA_API_KEY=your-api-key
ALGOLIA_SEARCH_KEY=your-search-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=your-session-secret
SESSION_MAX_AGE=86400000

# Two-Factor Authentication
TWO_FACTOR_APP_NAME=Lex Business

# Monitoring
NEW_RELIC_LICENSE_KEY=your-license-key
NEW_RELIC_APP_NAME=lex-business-production

# Logging
LOG_LEVEL=info
LOG_FILE=app.log

# Worker Configuration
WORKER_CONCURRENCY=5
JOB_TIMEOUT=300000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=30

# Feature Flags
FEATURE_SOCIAL_LOGIN=true
FEATURE_TWO_FACTOR_AUTH=true
FEATURE_EMAIL_VERIFICATION=true
FEATURE_PAYMENT_PROCESSING=true
FEATURE_FILE_UPLOAD=true
FEATURE_WEBSOCKET=true
FEATURE_GRAPHQL=true